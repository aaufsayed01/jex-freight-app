{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node"],
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "prisma/seed/**/*.ts"],
  "exclude": ["prisma/migrations/**", "node_modules", "dist"]
}


  